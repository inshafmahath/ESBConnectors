<?xml version="1.0" encoding="UTF-8"?>
<template name="markRead" xmlns="http://ws.apache.org/ns/synapse"
          description="Returns all recent Meetup notifications for the authorized member.">

    <!-- Required parameters -->
    <parameter name="key" description="API key for all authenticated API requests"/>
    <parameter name="access_token" description="OAuth access token for all authenticated API requests"/>
    <parameter name="fields" description="Request that additional fields (separated by commas) be included in the output."/>
    <parameter name="since_id" description="The id of the newest notification item, typically the first in the list returned by the notifications endpoint."/>

    <sequence>

        <property name="uri.var.key" expression="$func:key"/>
        <property name="uri.var.access_token" expression="$func:access_token"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <property name="uri.var.since_id" expression="$func:since_id"/>
        <filter xpath="get-property('uri.var.access_token') = '' or not(string(get-property('uri.var.access_token')))">
            <then>
                <payloadFactory>
                    <format>
                        <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                            <soapenv:Header></soapenv:Header>
                            <soapenv:Body>
                                <root>
                                    <key>$1</key>
                                    <fields>$2</fields>
                                    <since_id>$3</since_id>

                                </root>
                            </soapenv:Body>
                        </soapenv:Envelope>
                    </format>

                    <args>
                        <arg expression="get-property('uri.var.key')" />
                        <arg expression="get-property('uri.var.fields')" />
                        <arg expression="get-property('uri.var.since_id')" />

                    </args>

                </payloadFactory>
                <call>
                    <endpoint>
                        <http method="post"
                              uri-template="https://api.meetup.com/notifications/read"/>

                    </endpoint>
                </call>

            </then>
            <else>
                <header name="Authorization"
                        expression="fn:concat('Bearer ',get-property('uri.var.access_token'))"
                        scope="transport"/>
                <payloadFactory>
                    <format>
                        <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                            <soapenv:Header></soapenv:Header>
                            <soapenv:Body>
                                <root>
                                    <fields>$1</fields>
                                    <since_id>$2</since_id>

                                </root>
                            </soapenv:Body>
                        </soapenv:Envelope>
                    </format>

                    <args>
                        <arg expression="get-property('uri.var.fields')" />
                        <arg expression="get-property('uri.var.since_id')" />

                    </args>

                </payloadFactory>
                <call>
                    <endpoint>
                        <http method="post"
                              uri-template="https://api.meetup.com/notifications/read"/>

                    </endpoint>
                </call>
            </else>
        </filter>

        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove"/>
        <header name="X-LI-UUID" scope="transport" action="remove"/>
        <header name="X-Li-Pop" scope="transport" action="remove"/>
        <header name="X-Li-Fabric" scope="transport" action="remove"/>
        <header name="x-li-request-id" scope="transport" action="remove"/>

    </sequence>
</template>