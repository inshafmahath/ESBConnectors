<?xml version="1.0" encoding="UTF-8"?>
<template name="postPhotoComment" xmlns="http://ws.apache.org/ns/synapse" description="">

    <!-- Required parameters -->
    <parameter name="photo_id" description="ID of a photo"/>
    <parameter name="key" description="API key"/>

    <sequence>
        <property name="uri.var.photoID" expression="$func:photo_id"/>
        <property name="uri.var.key" expression="$func:key"/>
        <call>
            <endpoint>
                <http method="get" uri-template="https://api.meetup.com/2/photo_comments?photo_id={uri.var.photoID}&amp;key={uri.var.key}" />

            </endpoint>
        </call>

        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove" />
        <header name="X-LI-UUID" scope="transport" action="remove" />
        <header name="X-Li-Pop" scope="transport" action="remove" />
        <header name="X-Li-Fabric" scope="transport" action="remove" />
        <header name="x-li-request-id" scope="transport" action="remove" />

    </sequence>
</template>