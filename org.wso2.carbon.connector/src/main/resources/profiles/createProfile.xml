<?xml version="1.0" encoding="UTF-8"?>
<template name="createProfile" xmlns="http://ws.apache.org/ns/synapse" description="This method allows an authenticated member to join a group by creating a profile">

    <!-- Required parameters -->
    <parameter name="group_urlname" description="Urlname of group to join"/>
    <parameter name="group_id" description="Id of group to join"/>
    <parameter name="intro" description="Provides a Member an opportunity to tell the group about themselves"/>
    <parameter name="access_token" description="token key"/>

    <sequence>
        <property name="uri.var.group_urlname" expression="$func:group_urlname"/>
        <property name="uri.var.group_id" expression="$func:group_id"/>
        <property name="uri.var.intro" expression="$func:intro"/>
        <property name="uri.var.access_token" expression="$func:access_token"/>
        <header name="Authorization" expression="fn:concat('Bearer ',get-property('uri.var.access_token'))"
        scope="transport"/>

        <call>
            <endpoint>
                <http method="post" uri-template="https://api.meetup.com/2/profile?group_urlname={uri.var.group_urlname}&amp;group_id={uri.var.group_id}&amp;intro={uri.var.intro}" />
            </endpoint>
        </call>

        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove" />
        <header name="X-LI-UUID" scope="transport" action="remove" />
        <header name="X-Li-Pop" scope="transport" action="remove" />
        <header name="X-Li-Fabric" scope="transport" action="remove" />
        <header name="x-li-request-id" scope="transport" action="remove" />

    </sequence>
</template>
