<template name="getGroupDiscussionPosts" xmlns="http://ws.apache.org/ns/synapse"
          description="Listings of Group discussion posts">

    <!-- Required parameters -->
    <parameter name="urlname" description="URL name for required discussion boards"/>
    <parameter name="bid" description="Valid board ID for this group"/>
    <parameter name="did" description="Valid Discussion ID for this group"/>
    <parameter name="access_token"
               description="OAuth access token for all authenticated API requests"/>

    <sequence>

        <property name="uri.var.urlname" expression="$func:urlname"/>
        <property name="uri.var.bid" expression="$func:bid"/>
        <property name="uri.var.did" expression="$func:did"/>
        <property name="uri.var.access_token" expression="$func:access_token"/>


        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://api.meetup.com/{uri.var.urlname}/boards/{uri.var.bid}/discussions/{uri.var.did}?access_token={uri.var.access_token}"/>

            </endpoint>
        </call>

        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove"/>
        <header name="X-LI-UUID" scope="transport" action="remove"/>
        <header name="X-Li-Pop" scope="transport" action="remove"/>
        <header name="X-Li-Fabric" scope="transport" action="remove"/>
        <header name="x-li-request-id" scope="transport" action="remove"/>

    </sequence>
</template>