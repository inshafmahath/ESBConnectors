<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="topics_get_topics"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="REQUEST_HOST_HEADER" value="api.meetup.com" scope="axis2"/>
            <property name="key" expression="json-eval($.key)"/>
            <property name="member_id" expression="json-eval($.member_id)"/>
            <property name="name" expression="json-eval($.name)"/>
            <property name="search" expression="json-eval($.search)"/>
            <property name="topic" expression="json-eval($.topic)"/>

           <meetup.init/>
            <meetup.getTopics>
                <key>{$ctx:key}</key>
                <member_id>{$ctx:member_id}</member_id>
                <name>{$ctx:name}</name>
                <search>{$ctx:search}</search>
                <topic>{$ctx:topic}</topic>
            </meetup.getTopics>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <parameter name="serviceType">proxy</parameter>
    <description/>
</proxy>
                                