<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="meetup_edit_groups"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="REQUEST_HOST_HEADER" value="api.meetup.com" scope="axis2"/>
            <property name="urlname" expression="json-eval($.urlname)"/>
            <property name="description" expression="json-eval($.description)"/>

            <property name="key" expression="json-eval($.key)"/>
            <meetup.edit_groups>
                <description>{$ctx:description}</description>
                <urlname>{$ctx:urlname}</urlname>
                <key>{$ctx:key}</key>
            </meetup.edit_groups>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <parameter name="serviceType">proxy</parameter>
    <description/>
</proxy>
