<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="events_post_event_payments"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="REQUEST_HOST_HEADER" value="api.meetup.com" scope="axis2"/>
            <property name="key" expression="json-eval($.key)"/>
            <property name="urlname" expression="json-eval($.urlname)"/>
            <property name="event_id" expression="json-eval($.event_id)"/>
            <property name="member" expression="json-eval($.member)"/>
            <property name="amount" expression="json-eval($.amount)"/>
            <property name="paid_on" expression="json-eval($.paid_on)"/>
            <property name="quantity" expression="json-eval($.quantity)"/>
            <meetup.init/>
            <meetup.postEventPayments>
                <key>{$ctx:key}</key>
                <urlname>{$ctx:urlname}</urlname>
                <event_id>{$ctx:event_id}</event_id>
                <member>{$ctx:member}</member>
                <amount>{$ctx:amount}</amount>
                <paid_on>{$ctx:paid_on}</paid_on>
                <quantity>{$ctx:quantity}</quantity>
            </meetup.postEventPayments>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <parameter name="serviceType">proxy</parameter>
    <description/>
</proxy>
                                