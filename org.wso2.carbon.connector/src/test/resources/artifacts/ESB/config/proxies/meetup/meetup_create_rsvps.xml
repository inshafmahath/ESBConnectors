<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="meetup_create_rsvps"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="REQUEST_HOST_HEADER" value="api.meetup.com" scope="axis2"/>
            <property name="event_id" expression="json-eval($.event_id)"/>
            <property name="fields" expression="json-eval($.fields)"/>
            <property name="key" expression="json-eval($.key)"/>

            <meetup.create_rsvps>
                <event_id>{$ctx:event_id}</event_id>
                <fields>{$ctx:fields}</fields>
                <key>{$ctx:key}</key>

            </meetup.create_rsvps>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <parameter name="serviceType">proxy</parameter>
    <description/>
</proxy>
